---
import { Image } from "astro:assets";
import Diary from "components/diary/Diary.astro";
import GoogleExtLogo from "../../src/assets/svg/Logo Brack.svg";
import LogoDevFest from "../assets/svg/logo-devfest-h.svg";
import GoogleExtBanner from "../../src/assets/svg/hero.svg";
import Countdown from "./countdown/Countdown.astro";

interface Props {}

const {} = Astro.props;
const mensaje = `Universidad Catolica\n Bolviana Campus Central`;
---

<div class="background--color flex flex-col pt-20">
  <div class="w-full mt-40 sm:mt-8 min-[190px]:mt-8">
    <div class="">
      <Image class="m-auto w-10/12 sm:w-1/2" src={LogoDevFest} alt="Logo DevFest2024" />
    </div>
    <div class="grid lg:grid-cols-2 sm:grid-cols-1 lg:mx-0 place-items-center">
      <div
        class="text-right mt-10 flex lg:justify-self-end sm:justify-self-center"
      >
        <div class="mr-5">
          <p>
            <span class="material-symbols-outlined lg:text-6xl min-[190px]:text-4xl">location_on</span>
          </p>
        </div>
        <div>
          <p class="lg:text-xl min-[190px]:text-sm text-left">
            Universidad Autónoma<br>
            Juan Misael Saracho (UAJMS)
          </p>
        </div>
      </div>

      <div class="text-right mt-8 mr-10 lg:ml-8 lg:mr-0 flex lg:justify-self-start sm:justify-self-center">
        <div class="mr-5 items-start content-start">
          <p>
            <span class="material-symbols-outlined lg:text-6xl min-[190px]:text-4xl">calendar_clock</span>
          </p>
        </div>
        <div class="lg:ml-4">
          <p class="lg:text-xl min-[190px]:text-sm text-left">
            Sábado 23 de noviembre<br/>
          </p>
        </div>
      </div>
    </div>
    <div class="text-center flex items-center justify-center mt-5 mb-5">
      <a
        href="/devfest2024"
        class="rounded-full md:px-6 min-[190px]:px-4 min-[190px]:py-2 bg-red-500 border-4 hover:bg-green-500 border-black text-white md:text-3xl min-[190px]:text-lg font-semibold"
      >
        DevFest 2024
      </a>
    </div>
