    <div
      class="text-center flex items-center justify-center content-center mt-5 mb-5"
    >
      <div class="justify-self-end">
        <p class="min-[190px]:text-sm md:text-2xl font-medium">
          Agenda el evento en google Calendar:
        </p>
      </div>

      <div class="justify-self-start">
        <button id="add-to-calendar">
          <img
            class="min-[190px]:h-5 md:h-8"
