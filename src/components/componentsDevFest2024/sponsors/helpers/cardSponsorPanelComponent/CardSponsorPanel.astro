---
import { Image } from "astro:assets";
import type { CardSponsorPanelProps } from "./CardSponsorPanelProps";
const { cards } = Astro.props as CardSponsorPanelProps;
---

<div class="px-8 lg:px-12 py-4 grid gap-5 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
  {
    cards.map((card) => {
      return <div class="bg-white border-black border-4 h-52 flex justify-center items-center px-4 lg:px-12 transition duration-500 hover:scale-105">
        <Image src={card.image} alt={card.name} class='max-h-48 object-contain' />
      </div>;
    })
  }
</div>
