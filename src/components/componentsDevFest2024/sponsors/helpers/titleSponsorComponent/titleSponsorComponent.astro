---
import "./titleSponsorComponent.css";
import type { TitleSponsorComponentProps } from "./titleSponsorComponentProps";

const { title, color } = Astro.props as TitleSponsorComponentProps;
---

<div class="w-full flex justify-center">
  <div class="w-1/2 sm:w-2/6 lg:w-3/12 xl:w-1/6 custom-shape bg-black p-1">
    <div class=`flex custom-shape justify-end ${color}`>
      <div
        class="bg-slate-50 outline outline-black p-2 custom-height custom-width mb-3"
      >
        <h2 class="text-center text-xl sm:text-2xl font-bold py-1">
          { title }
        </h2>
      </div>
    </div>
  </div>
</div>
