---
import { Image } from "astro:assets";
import Logo from "./../../../assets/devfest2024/svg/LOGO_DEVFEST.svg";
import Logo2 from "./../../../assets/devfest2024/svg/LOGO_DEVFEST_DESK.svg";
import MenuList from "../navbar/menuList.json";
---

<header
  class="bg-rojo-GDG top-0 start-0 border-2 lg:border-4 border-black w-full fixed z-40"
>
  <nav class="flex flex-wrap justify-between items-center py-3 lg:py-6 px-6 md:px-10">
    <div class="h-12 flex items-center">
      <Image class="w-48 md:hidden" src={Logo} alt="logo" />
      <Image class="w-60 hidden md:flex lg:w-96" src={Logo2} alt="logo2" />
    </div>
    <div
      id="menu-button"
      class="text-Gray-900 text-4xl font-bold md:hidden cursor-pointer"
    >
      &equiv;
    </div>
    <div
      id="menu-open"
      class="items-center text-center w-full hidden md:flex md:w-auto animate-fade-down animate-duration-500"
    >
    <ul
    class="font-medium text-sm lg:text-lg text-white flex flex-col pt-7 md:flex-row md:pt-0 gap-4 md:gap-6"
  >
    {MenuList.map((menu) => (
      <li>
        <a
          href={menu.href}
          class={"px-5 lg:py-3 py-2 lg:border-4 border-2 border-black inline-flex justify-center items-center text-center transition duration-500 hover:scale-110"} style={`background-color: ${menu.color}`}
        >
          {menu.title}
        </a>
      </li>
    ))}
  </ul>
    </div>
  </nav>
</header>

<script>
  const button = document.querySelector("#menu-button")!;
  const menuOpen = document.querySelector("#menu-open")!;
  button.addEventListener("click", () => {
    menuOpen.classList.toggle("hidden");
  });

  window.addEventListener("scroll", () => {
    if (!menuOpen.classList.contains("hidden")) {
      menuOpen.classList.add("hidden");
    }
  });
</script>
