---
import "./packagesDevFest2024.css";
import { Image } from "astro:assets";

import { CardDevFest2024 } from "components/componentsDevFest2024/packages/helpers/cardDevFest2024";
import { devCards } from "./helpers/devCards";

import PackageCard from "./devfestCardComponent/packageCardsDevFest2024.astro";
import CloudImage from "./../../../assets/devfest2024/svg/cloud-image.svg";

const cards: CardDevFest2024[] = devCards;
---

<div class="bg-rojo-GDG pt-10 pb-10 px-6 outline outline-black outline-4">
  <div>
    <div class="flex justify-center lg:justify-between">
      <div class="flex-1 hidden lg:block"></div>
      <div class="flex-0 self-end">
        <div class="custom-shape bg-black p-1">
          <div class="flex custom-shape bg-rojo-GDG justify-end">
            <div
              class="bg-slate-50 outline outline-black custom-height custom-width mb-3"
            >
              <h2
                class="text-center text-xl sm:text-2xl lg:text-3xl xl:text-4xl font-bold py-2 px-8"
              >
                Paquetes
              </h2>
            </div>
          </div>
        </div>
      </div>
      <div
        class="flex-1 text-right hidden lg:flex lg:justify-end lg:pr-6 lg:gap-x-5"
      >
        <Image
          src={CloudImage}
          alt="cloud"
          class="w-24 h-24 p-0 m-0 block self-end"
        />
        <Image
          src={CloudImage}
          alt="cloud"
          class="w-12 h-12 p-0 m-0 block self-end"
        />
      </div>
    </div>

    <!-- CARDS -->
    <div class="flex flex-col lg:flex-row pt-4 m-0">
      {
        cards.map((card, cardIndex) => {
          return (
            <div
              class={`
                px-0  lg:px-4 mt-6 flex-1 border-0 border-black ${cards.length != cardIndex + 1 ? "lg:border-r-4" : ""} 
              `}
            >
              <PackageCard card={card} />
            </div>
          );
        })
      }
    </div>
  </div>
</div>
