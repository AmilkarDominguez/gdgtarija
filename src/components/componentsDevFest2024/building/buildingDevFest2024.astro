---
import { Image } from "astro:assets";
import buildingAsset from "./../../../assets/devfest2024/svg/buidingAsset.svg";
import logoblack from "./../../../assets/devfest2024/svg/logoBlack.svg";
---

<div
  
  class="w-full  h-screen items-center bg-black flex flex-col justify-between border-2 lg:border-4 border-black"
>
  <!-- Fondo superior con logoblack (centrado) -->
  <div class="w-full flex">
    <Image src={buildingAsset} alt="Building asset" class="w- lg:w-full" />
  </div>

  <!-- Texto central -->
  <div
    class="flex flex-col items-center justify-center flex-grow text-center text-white px-4"
  >
    <p class="text-2xl md:text-4xl lg:text-5xl font-medium tracking-wide">
      Los devs están en modo hackathon. 💻⚡️ ¡Pronto habrá novedades!
    </p>
  </div>
  <div class="w-24 md:w-32 items-center lg:w-40 pb-7">
    <Image src={logoblack} alt="Logo" />
  </div>
</div>
